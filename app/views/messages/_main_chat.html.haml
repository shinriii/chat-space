.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        = @group.name
        .main-header__left-box__member-list
          - @group.users.each do |user|
            = user.name
          .main-header__left-box__member-list__member

    .main-header__edit-btn
      = link_to edit_group_path(@group) do
        Edit
      
  .messages
    = render @messages
  
  .form
    = form_for [@group, @message] do |f|
      .field_with_errors
        = f.text_field :content, class: 'field_with_errors__left', placeholder: 'type a message'
        = f.label :image, class: 'field_with_errors__image' do
          = icon('fas', 'image', class: 'field_with_errors__fa.fa-image')
          = f.file_field :image, class: 'field_with_errors__hide'
      = f.submit 'Send', class: 'field_with_errors__submit-btn'
    